<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <FrameLayout
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <android.support.v4.view.ViewPager
      android:id="@+id/viewpager_result"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <android.support.design.widget.TabLayout
        android:id="@+id/sliding_tabs_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        />
    </android.support.v4.view.ViewPager>

  </FrameLayout>

  <LinearLayout
    android:id="@+id/ll_k_4"
    android:layout_width="92dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/frameLayout">
    <TextView
      android:textSize="18sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="K(4) = "/>
    <TextView
      android:textSize="18sp"
      android:id="@+id/tv_k4"
      android:layout_width="54dp"
      android:layout_height="wrap_content"/>
  </LinearLayout>
  <LinearLayout
    android:id="@+id/ll_k_3"
    android:layout_width="92dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintEnd_toStartOf="@+id/ll_k_4"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/frameLayout">
    <TextView
      android:textSize="18sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="K(3) = "/>
    <TextView
      android:textSize="18sp"
      android:id="@+id/tv_k3"
      android:layout_width="53dp"
      android:layout_height="wrap_content"/>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/ll_k_5"
    android:layout_width="92dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/ll_k_4"
    app:layout_constraintTop_toBottomOf="@+id/frameLayout">


    <TextView
      android:textSize="18sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="K(7) = "/>
    <TextView
      android:textSize="18sp"
      android:id="@+id/tv_k6"
      android:layout_width="53dp"
      android:layout_height="wrap_content"/>
  </LinearLayout>
  <Button
    android:id="@+id/btnResult_by_max"
    android:layout_width="0dp"
    android:layout_height="67dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:text="@string/result"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/ll_k_4"/>
</android.support.constraint.ConstraintLayout>